<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
          <div class="container-fluid py-5">
              <div class="row">
                  <div class="col-12 col-sm-12 col-md-6">
                    <img class="img-fluid d-block w-100" src="/images/home-about.png" alt="Login">
                  </div>
                  <div class="col-12 col-sm-12 col-md-6">
                      <div class="float-end">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="clearfix"></div>
                      <h1>Login</h1>
                      <div class="mt-3" id="loginAlertPlaceholder"></div>
                      <form id="loginForm">
                          <div class="input-group mb-3 input-group-lg">
                            <span class="input-group-text" id="userIcon">
                              <i class="bi bi-person-circle"></i>
                            </span>
                            <input type="text" id="username" class="form-control" placeholder="Username" aria-describedby="userIcon">
                          </div>
                          <div class="input-group mb-3 input-group-lg">
                            <span class="input-group-text" id="passwordIcon">
                              <i class="bi bi-key-fill"></i>
                            </span>
                            <input type="password" id="password" class="form-control" placeholder="password" aria-describedby="passwordIcon">
                          </div>
                          <div class="d-grid gap-2 mx-auto mb-4">
                            <button type="submit" class="btn btn-lg btn-dark me-2 btn-submit">
                              <span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                              Login
                            </button>
                          </div>
                          <p class="small text-center">Haven't registered yet, sign up <button type="button" class="btn btn-link btn-xs" data-bs-toggle="modal" data-bs-target="#registerModal" data-bs-dismiss="modal">here</button></p>
                      </form>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>